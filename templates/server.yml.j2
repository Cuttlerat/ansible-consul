version: '3.2'
services:
  server:
    image: consul:{{ consul_version }}
    network_mode: host
    command: agent -server -bootstrap-expect=1 -dns-port=53 -recursor=8.8.8.8
    environment:
      - 'CONSUL_BIND_INTERFACE=eth0'
      - 'CONSUL_LOCAL_CONFIG={"skip_leave_on_interrupt": true}'
      - 'CONSUL_ALLOW_PRIVILEGED_PORTS='
        
